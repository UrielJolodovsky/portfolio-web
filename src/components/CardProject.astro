---
import GeneralButton from '../components/IT_Buttons/GeneralButton.astro'

interface ITech {
    name: string;
    image: ImageMetadata;
    color: string;
}
interface Props {
    title: string;
    image: string;
    content: string;
    tecnologias: {[key: number]: ITech};
    github: string;
    website: string;
}

const { title, image, content, tecnologias, github, website } = Astro.props;
---

<div class="max-w-[330px] h-[460px] bg-white/15 transition rounded-lg shadow-inner shadow-white/25 p-3 relative">
    <div class="rounded-lg pb-3">
        <img src={image} alt="" class="w-full h-full object-cover rounded-lg">
    </div>
    <div class="flex flex-col justify-start items-start gap-y-3">
        <h1 class="text-2xl font-semibold">{title}</h1>
        <p class="text-base text-balance">
            {content}
        </p>
        <div class="flex flex-wrap gap-3">
            {Object.keys(tecnologias).map((key) => {
                const { name, image, color } = tecnologias[Number(key)];
                return (
                    <GeneralButton title={name} image={image} background={color} />
                )
            })}
        </div>
        <div class="absolute bottom-3 pr-6 w-full flex justify-center items-center gap-x-5">
            <a target="_blank" href={github} class="flex justify-between items-center gap-x-2 rounded-full px-3 py-1.5 bg-white/20 hover:bg-white/30 transition">
