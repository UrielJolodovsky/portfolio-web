---
import { Image } from 'astro:assets';
import astro_logo from 'public/astro_logo.png';

interface Props {
    title: string;
    image: string;
    background: string;
}

const { title, image, background } = Astro.props
---

<div class={`rounded-full px-3 py-1.5 flex ${background} justify-between items-center gap-x-2 gap-y-2 cursor-pointer`}>
    <img src={image} class="w-4 max-h-4" />
    <span class="text-xs">{title}</span>
</div>